extends base.pug 

block scripts 
    script(src="/static/index.js") 

block style 
    style 
        include ../static/style.css
        include ../static/contact.css

block content 
        div.container
            h2 Contact Us 
            form(action="/contact" method="post" class="myform")
                input(type="text" name="name" placeholder="Enter Your Name" class="myinput") 
                input(type="phone" name="phone" placeholder="Enter Your Phone No." class="myinput") 
                input(type="email" name="email" placeholder="Enter Your Email ID" class="myinput") 
                input(type="text" name="address" placeholder="Enter Your Address" class="myinput") 
                input(type="text" name="concern" placeholder="Enter Your Concern" class="myinput") 
                button(class="btn")
                    | submit 